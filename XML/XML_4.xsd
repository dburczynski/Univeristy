<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <xsd:element name = "telefon" >
        <xsd:simpleType>
            <xsd:restriction base="xsd:string">
                <xsd:pattern value = "[1-9][0-9]{2,}(-[0-9]{3,}){2,}"/>
                <xsd:pattern value = "\+[1-9][0-9]( [0-9]{3,}){3,}" />
                <xsd:pattern value = "\([1-9][0-9]\) [0-9]{3,}( [0-9]{2,}){2,}"/>
            </xsd:restriction>
        </xsd:simpleType>
    </xsd:element>

</xsd:schema>